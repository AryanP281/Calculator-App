<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:columnCount="4"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/calc_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:textSize="50sp"
        android:gravity="right"
        android:text="0"
        />

    <Button
        android:id="@+id/extra_clear"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:onClick="clearDisplay"
        android:text="Clear"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/extra_backspace"
        android:layout_row="2"
        android:layout_column="3"
        android:src="@drawable/backspace"
        android:layout_gravity="fill_horizontal"
        android:onClick="backspace"
        />

    <Button
        android:id="@+id/digit_0"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/digit_1"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/digit_2"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/operator_plus"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/digit_3"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/digit_4"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/digit_5"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/operator_minus"
        android:layout_row="4"
        android:layout_column="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/digit_6"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/digit_7"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/digit_8"
        android:layout_row="5"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/operator_mul"
        android:layout_row="5"
        android:layout_column="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/extra_openbrack"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="("
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/digit_9"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/extra_closebrack"
        android:layout_row="6"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=")"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/operator_div"
        android:layout_row="6"
        android:layout_column="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/extra_dot"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/operator_mod"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/operator_pow"
        android:layout_row="7"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="^"
        android:textSize="20sp"
        android:layout_gravity="fill_horizontal"
        />

    <Button
        android:id="@+id/operator_equals"
        android:layout_row="7"
        android:layout_column="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="20sp"
        android:onClick="calculate"
        android:layout_gravity="fill_horizontal"
        />

</GridLayout>

